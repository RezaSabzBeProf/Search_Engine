@using SearchEngine.Datalayer.Entities

@model IEnumerable<Page>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">farslearn.com search engine</h1>
    <div class="row">
        <a asp-controller="home" asp-action="search" asp-route-q="@ViewBag.q">article</a>
        <a asp-controller="home" asp-action="searchimage" asp-route-q="@ViewBag.q">image</a>
    </div>
    <form asp-controller="home" asp-action="search" method="get">

            <div class="form-group">
                <input type="text" name="q" class="form-control" placeholder="search...">
            </div>

 
            <button type="submit" style="width: 20%; margin-left: 80%; margin-right: 10%;"class="btn btn-primary">search</button>


    </form>
</div>
@if(Model != null)
{
    if(ViewBag.IsImage)
    {
        foreach (var item in Model)
        {
            <a href="@item.url">
                <img width="250" height="250" src="@item.url" />
            </a>
            <br />
            <a href="@item.ImagePageUrl">
                Show Article
            </a>
            <span>@item.title</span>
            <span>@item.area</span>

            <hr />
        }
    }
    else
    {
        foreach (var item in Model)
        {
            <h3><a href="@item.url">@item.title</a></h3>
            <span>@item.area</span>
            <hr>
        }
    }
   
}

<footer style="auto">
    Programmer: Reza Keshvari
    <br />
